<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Caja Petrolera de Salud{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('logo.png') }}" />
        <!-- Bootstrap -->
    <link href="{{ asset('vendors/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
     <link href="{{ asset('build/css/base.css') }}" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
             <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                    </button>
                        <img class="logo" src="{{ asset('logo.png') }}" alt="logo"> <a href="#" class="titulo">Caja Petrolera de Salud</a>
                </div>
            </div>
        </nav>
        {% block body %}

        <div class="con">
            <div class="contenedor">
            <div class="carta">
                <div class="lado frente">
                  <img src="{{ asset('hoja.jpg') }}" alt="...">
                </div>
                <div class="lado atras">
                    <div class="list-group">
                      <a class="list-group-item active">
                      HOJA DE RUTA
                      </a>
                      <a href="{{ path('solicitud_index') }}" class="list-group-item ">PENDIENTES</a>
		                  <a href="{{ path('solicitud_proceso') }}"  class="list-group-item ">EN PROCESO</a>
                      <a href="{{ path('solicitud_realizado') }}"  class="list-group-item ">REALIZADAS</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedor">
            <div class="carta">
                <div class="lado frente">
                  <img src="{{ asset('estadistica.png') }}" alt="...">
                </div>
                <div class="lado atras">
                    <div class="list-group">
                      <a  class="list-group-item active">
                        REPORTE
                      </a>
                      <!-- <a  class="list-group-item">Servicios Transfusionales</a> -->

                    </div>
                </div>
            </div>
        </div>
        {% endblock %}
        {% block javascripts %}
        <script src="{{ asset('vendor/jquery/jquery.js') }}" type="text/javascript">  </script>
		<script src="{{ asset('vendor/jquery/jquery.backstretch.min.js') }}" type="text/javascript">  </script>
		<script type="text/javascript">
            $(document).ready(function() {
               $.backstretch(["{{ asset('vendors/img/fondo.png') }}"]);
            });
        </script>
        {% endblock %}
    </body>
</html>
